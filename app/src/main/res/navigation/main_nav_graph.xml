<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_nav_graph"
    app:startDestination="@id/nav_home">

    <fragment
        android:id="@+id/nav_home"
        android:name="io.github.thwisse.kentinsesi.ui.home.HomeFragment"
        android:label="Kentin Sesi"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_createPostFragment"
            app:destination="@id/createPostFragment" />
        <action
            android:id="@+id/action_homeFragment_to_filterBottomSheetFragment"
            app:destination="@id/filterBottomSheetFragment" />
        <action
            android:id="@+id/action_homeFragment_to_filterPresetsBottomSheetFragment"
            app:destination="@id/filterPresetsBottomSheetFragment" />
        <action
            android:id="@+id/action_homeFragment_to_postDetailFragment"
            app:destination="@id/postDetailFragment" />
    </fragment>
    <fragment
        android:id="@+id/nav_map"
        android:name="io.github.thwisse.kentinsesi.ui.map.MapFragment"
        android:label="Kentin Sesi"
        tools:layout="@layout/fragment_map" >
        <action
            android:id="@+id/action_nav_map_to_postDetailFragment"
            app:destination="@id/postDetailFragment" />
        <action
            android:id="@+id/action_nav_map_to_createPostFragment"
            app:destination="@id/createPostFragment" />
        <action
            android:id="@+id/action_nav_map_to_filterBottomSheetFragment"
            app:destination="@id/filterBottomSheetFragment" />
        <action
            android:id="@+id/action_nav_map_to_filterPresetsBottomSheetFragment"
            app:destination="@id/filterPresetsBottomSheetFragment" />
    </fragment>
    <fragment
        android:id="@+id/nav_notifications"
        android:name="io.github.thwisse.kentinsesi.ui.notifications.NotificationsFragment"
        android:label="Bildirimler"
        tools:layout="@layout/fragment_notifications" />
    <fragment
        android:id="@+id/nav_profile"
        android:name="io.github.thwisse.kentinsesi.ui.profile.ProfileFragment"
        android:label="Profil"
        tools:layout="@layout/fragment_profile" >
        <action
            android:id="@+id/action_nav_profile_to_postDetailFragment"
            app:destination="@id/postDetailFragment" />
        <action
            android:id="@+id/action_nav_profile_to_adminPanelFragment"
            app:destination="@id/adminPanelFragment" />
    </fragment>
    <fragment
        android:id="@+id/createPostFragment"
        android:name="io.github.thwisse.kentinsesi.ui.post.CreatePostFragment"
        android:label="Paylaşım Oluştur"
        tools:layout="@layout/fragment_create_post" >
        <action
            android:id="@+id/action_createPostFragment_to_locationPickerFragment"
            app:destination="@id/locationPickerFragment" />
    </fragment>
    <fragment
        android:id="@+id/postDetailFragment"
        android:name="io.github.thwisse.kentinsesi.ui.post.PostDetailFragment"
        android:label="Detay"
        tools:layout="@layout/fragment_post_detail">

        <argument
            android:name="postId"
            app:argType="string" />
        <action
            android:id="@+id/action_postDetailFragment_to_statusUpdatesFragment"
            app:destination="@id/statusUpdatesFragment" />
    </fragment>
    
    <fragment
        android:id="@+id/statusUpdatesFragment"
        android:name="io.github.thwisse.kentinsesi.ui.post.StatusUpdatesFragment"
        android:label="Güncellemeler"
        tools:layout="@layout/fragment_status_updates">
        <argument
            android:name="postId"
            app:argType="string" />
    </fragment>
    <dialog
        android:id="@+id/filterBottomSheetFragment"
        android:name="io.github.thwisse.kentinsesi.ui.home.FilterBottomSheetFragment"
        android:label="Filtrele"
        tools:layout="@layout/fragment_filter_bottom_sheet" />
    <dialog
        android:id="@+id/filterPresetsBottomSheetFragment"
        android:name="io.github.thwisse.kentinsesi.ui.home.FilterPresetsBottomSheetFragment"
        android:label="Filtrelerim"
        tools:layout="@layout/fragment_filter_presets_bottom_sheet" />
    <fragment
        android:id="@+id/locationPickerFragment"
        android:name="io.github.thwisse.kentinsesi.ui.map.LocationPickerFragment"
        android:label="fragment_location_picker"
        tools:layout="@layout/fragment_location_picker" />
    <fragment
        android:id="@+id/adminPanelFragment"
        android:name="io.github.thwisse.kentinsesi.ui.admin.AdminPanelFragment"
        android:label="Admin Paneli"
        tools:layout="@layout/fragment_admin_panel" />
</navigation>